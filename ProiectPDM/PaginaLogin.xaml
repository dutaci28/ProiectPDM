<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectPDM.PaginaLogin"
             Title="PaginaLogin">

    <StackLayout Padding="100,100,100,100">
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Entry x:Name="ParolaEntry" Placeholder="Parola" IsPassword="True" />
        <Button Text="Login" Clicked="LoginButton_Clicked" Margin="0,40,0,0"/>
        <Button Text="Create an account" Clicked="RegisterButton_Clicked" Margin="0,10,0,0"/>
    </StackLayout>
    
</ContentPage>