<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProiectPDM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProiectPDM"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        ContentTemplate="{DataTemplate local:PaginaLogin}"
        Route="LoginPage" />

    <ShellContent
        Title="Creare cont"
        ContentTemplate="{DataTemplate local:PaginaRegister}"
        Route="RegisterPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:PaginaEchipamente}"
        Route="PaginaEchipamente" />

    <ShellContent
        ContentTemplate="{DataTemplate local:PaginaHarta}"
        Route="PaginaHarta" />

    <ShellContent
        ContentTemplate="{DataTemplate local:PaginaProfil}"
        Route="PaginaProfil" />

    <ShellContent
        ContentTemplate="{DataTemplate local:PaginaInchirieri}"
        Route="PaginaInchirieri" />

    <ShellContent
        ContentTemplate="{DataTemplate local:PaginaAcasa}"
        Route="PaginaAcasa" />

    <ShellContent
        ContentTemplate="{DataTemplate local:PaginaStatistici}"
        Route="PaginaStatistici" />

</Shell>
